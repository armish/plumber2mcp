{
  "mcpServers": {
    "plumber2mcp-stdio": {
      "command": "Rscript",
      "args": [
        "-e",
        "setwd('inst/examples'); source('run_mcp_server_stdio.R')"
      ],
      "cwd": ".",
      "env": {
        "PYTHONWARNINGS": "ignore",
        "LOG_LEVEL": "WARNING",
        "LOGGING_LEVEL": "WARNING",
        "CHUK_LOG_LEVEL": "WARNING",
        "CHUK_MCP_LOG_LEVEL": "WARNING",
        "MCP_LOG_LEVEL": "WARNING",
        "CHUK_MCP_RUNTIME_LOG_LEVEL": "ERROR",
        "CHUK_SESSIONS_LOG_LEVEL": "ERROR",
        "CHUK_ARTIFACTS_LOG_LEVEL": "ERROR",
        "PYTHONPATH_LOGGING_LEVEL": "WARNING"
      }
    }
  }
}